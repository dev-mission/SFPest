<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/libraries/bootstrap/css/bootstrap.css' />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
          <% if (current_user) { %>
            <p>Hello, <%= current_user.username %>! <a href="/logout">Logout</a></p>
          <% } %>
          <% if (flash.info) { %>
          <div class="alert alert-success"><%= flash.info.join(' '); %></div>
          <% } %>
          <% if (flash.error) { %>
          <div class="alert alert-danger"><%= flash.error.join(' '); %></div>
          <% } %>
          <%- body %>
        </div>
      </div>
    </div>
  </body>
</html>
