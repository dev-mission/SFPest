<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title><%= title %> - <%= process.env.APP_NAME %></title>
    <link rel="stylesheet" href="/libraries/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/libraries/fontawesome/css/all.css" />
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <% if (locals.head) { %><%- head %><% } %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/"><i class="fa fa-bug"></i> <%= process.env.APP_NAME %></a>
      <div class="collapse navbar-collapse justify-content-end">
        <% if (currentUser) { %>
          <span class="navbar-text">Hello, <%= currentUser.firstName %>!</span>
        <% } %>
        <ul class="navbar-nav px-3">
          <% if (currentUser) { %>
            <li class="nav-item text-nowrap">
              <a class="nav-link" href="/logout">Sign out</a>
            </li>
          <% } else { %>
            <li class="nav-item text-nowrap">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
    <div class="container-fluid">
      <% if (flash.info) { %>
      <div class="row justify-content-center" role="main">
        <div class="col col-sm-6 col-lg-4 col-xl-3">
          <div class="alert alert-success my-4"><%= flash.info.join(' '); %></div>
        </div>
      </div>
      <% } %>
      <% if (flash.error) { %>
      <div class="row justify-content-center" role="main">
        <div class="col col-sm-6 col-lg-4 col-xl-3">
          <div class="alert alert-danger my-4"><%= flash.error.join(' '); %></div>
        </div>
      </div>
      <% } %>
      <%- body %>
    </div>
  </body>
</html>
