<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1>New Pest Report</h1>
      <form method="post" action="/submissions">
        <input type="hidden" name="location" value="<%= step1.location %>">
        <input type="hidden" name="what" value="<%= step1.what %>">
        <input type="hidden" name="pictureUrl" value="<%= step1.pictureUrl %>">
        <input type="hidden" name="phone" value="<%= step1.phone %>">

        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" placeholder="Example: John Smith" />
        </div>

        <div class="form-group">
          <div class="form-row">
            <div class="col">
              <label>Street Number</label>
              <input type="text" class="form-control" name="streetNumber" placeholder="Example: 90" />
            </div>
            <div class="col">
              <label>Street Name</label>
              <select class="form-control" name="streetName">
                <option value="Oakdale Avenue">Oakdale Avenue</option>
                <option value="Griffith Street">Griffith Street</option>
                <option value="Palou Street">Palou Street</option>
                <option value="Jerold Avenue">Jerold Avenue</option>
                <option value="Kirkwood Avenue">Kirkwood Avenue</option>
              </select>
            </div>
            <div class="col">
              <label>Unit Number</label>
              <input type="text" class="form-control" name="unitNumber" placeholder="Example: #101" />
            </div>
          </div>
        </div>

        <div class="form-group">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>