<div class="row justify-content-center" role="main">
  <div class="col col-sm-6 col-lg-4 col-xl-3">
    <h1 class="h2">Reset your password</h1>
    <% if (isExpired) { %>
      <p>Sorry, this password reset link has expired. <a href="/login/forgot-password">Request another?</a></p>
    <% } else { %>
      <p>Enter a new password for your account.</p>
      <form method="post" action="/login/reset-password/<%= token %>">
        <div class="form-group">
          <label>New password</label>
          <input type="password" class="form-control" name="password" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </div>
      </form>
    <% } %>
  </div>
</div>
